<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <EditTextPreference
        android:key="carne_text"
        android:title="@string/pref_title_carne"
        android:defaultValue="@string/pref_default_carne"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="refri_text"
        android:title="@string/pref_title_refri"
        android:defaultValue="@string/pref_default_refri"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="linguica_text"
        android:title="@string/pref_title_linguica"
        android:defaultValue="@string/pref_default_linguica"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />



</PreferenceScreen>
